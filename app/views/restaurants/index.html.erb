<div class="container">

    <p id="notice"><%= notice %></p>

    <h1>Restaurants</h1>

    <table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone number</th>
        <th>Category</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @restaurants.each do |restaurant| %>
        <tr>
            <td width='150'><%= restaurant.name %></td>
            <td width='350'><%= restaurant.address %></td>
            <td width='150'><%= restaurant.phone_number %></td>
            <td width='100'><%= restaurant.category.capitalize %></td>
            <td><%= link_to 'Show', restaurant, {:class=>"btn btn-success"} %></td>
            <td><%= link_to 'Edit', edit_restaurant_path(restaurant), {:class=>"btn btn-warning yellow"} %></td>
            <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <br>

    <%#= link_to 'Top Restaurant', top_restaurants_path %>
    <%= link_to 'New Restaurant', new_restaurant_path, {:class=>"btn btn-primary"} %>

</div>