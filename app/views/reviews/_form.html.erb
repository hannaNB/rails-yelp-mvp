<%= form_for [@restaurant, @review] do |form| %>


  <div class="form-group">
    <p><strong><%= form.label :content %></strong><br>
    <%= form.text_field :content, size: 30 %></p>
  </div>

  <div class="form-group">
    <p><strong><%= form.label :rating %></strong><br>
    <%= form.text_field :rating %></p>
  </div>

  <div>
    <%= form.submit 'Create', :class => 'btn btn-warning' %>
  </div>
<% end %>
